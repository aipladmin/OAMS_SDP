{% extends "index.html" %}
{% block content %}
{# {{ data }}
{{ Sdata }} #}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-5 pb-2 mb-3  border-bottom">
	<h1 class="h2">
		<center>
			Manage Qualification and Specialization 
		</center>
	</h1>
	<div class="btn-toolbar mb-2 mb-md-0">
	</div>

</div>
<div class="container">
	<form method="post" action="{{ url_for('manageQSscr') }}">
		<div class="row">
			<div class="col">
				<label>Select Profession</label>
			</div>
			<div class="col">
				<label>Select Type</label>
			</div>
		</div>

		<div class="row">
			<div class="col">
				<select class="custom-select" name="profession">
					<option selected>-- SELECT --</option>
					{% for items in data %}
					<option value="{{ items['Profession_Type_ID'] }}">{{ items['profession_type'] }}</option>
						
					{% endfor %}
				</select>
			</div>
			<div class="col">
				<select class="custom-select" name="type">
					<option selected>-- SELECT --</option>
					<option value="specialization">Specialization</option>
					<option value="qualification">Qualification</option>
					
				</select>
			</div>
		</div><br/>
		{# <div class="row">
			<div class="col">
				<input type="text" class="form-control" placeholder="Enter">
			</div>
		</div> #}
		<div class="row">
			<div class="col">
				<label>Enter Details </label>
			</div>
		</div>
		<div class="row">
			<div class="col">
				<input type="text" name="details" class="form-control">
			</div>
		</div><br/>
		<div class="row">
			<div class="col">
				<button class="btn btn-primary" type="submit" name="bttn" value="insert">Submit</button>
			</div>
		</div>
	</form>	
</div>
<div class="container">
	
	<table class="table table-striped">
		<thead>
			<tr>
				<th scope="col">Sr.No</th>
				<th scope="col">Profession</th>
				<th scope="col">Type</th>
				<th scope="col">Details</th>
				<th scope="col">Update</th>
				<th scope="col">Delete</th>
			</tr>
		</thead>
		<tbody>
			
			{% for items in Sdata %}
			<form method="post" action="{{ url_for('manageQSscr') }}">
				<tr>
					<td>
						<input type="text" class="form-control-plaintext" name="Profession_Type_ID" value="{{ items['PDID'] }}" readonly />
					</td>
					<td>
						{# <input type="text" class="form-control" name="Profession" value="{{items['Profession'] }}" /> #}
						
						<select class="custom-select">
							{% if items['Profession'] == "Doctor" %}
							<option selected value="items['Profession']">
								{{ items['Profession'] }}
							</option>
							{% endif %}	
							{% if items['Profession'] == "Lawyer" %}
							<option selected value="items['Profession']">
								{{ items['Profession'] }}
							</option>
							{% endif %}
							{# <option selected value="items['Profession']">
								{{ items['Profession']  }}
							</option> #}
						</select>
						
						
					</td>
					<td>
						<input type="text" class="form-control" name="Type" value="{{items['Type'] }}" />
						
					</td>
					<td>
						<input type="text" class="form-control" name="Details" value="{{items['Details'] }}" />
						
					</td>
					<td>
						<button type="submit" name="bttn" value="update" class="btn btn-primary">Update</button>
					</td>
					<td>
						<button type="submit" name="bttn" value="delete" class="btn btn-danger">Delete</button>
					</td>
				</tr>

			</form>
			{% endfor %}
			
		</tbody>
	</table>
</div>
{% endblock %}